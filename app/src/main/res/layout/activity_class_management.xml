<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input Fields for Class Details -->
    <EditText
        android:id="@+id/class_name_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Class Name"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/subject_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Subject"
        android:inputType="text"
        android:padding="10dp" />

    <!-- Teacher Selection Spinner -->

    <Spinner
        android:id="@+id/teacher_spinner"
        android:layout_width="194dp"
        android:layout_height="48dp"
        android:prompt="@string/select_teacher" />

    <!-- Buttons for CRUD Operations -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:weightSum="3">

        <Button
            android:id="@+id/add_class_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add" />

        <Button
            android:id="@+id/update_class_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update" />

        <Button
            android:id="@+id/delete_class_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete" />
    </LinearLayout>

    <!-- ListView for Displaying Classes -->
    <ListView
        android:id="@+id/class_list_view"
        android:layout_width="wrap_content"
        android:layout_height="448dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:dividerHeight="1dp" />

</LinearLayout>
